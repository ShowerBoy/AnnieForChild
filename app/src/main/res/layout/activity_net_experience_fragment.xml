<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/network_faq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/icon_network_experience_faq" />

            <ImageView
                android:id="@+id/network_consult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/icon_network_experience_consulting" />


        </LinearLayout>


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="12dp"
            android:text="体验课"
            android:textSize="16sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/experienceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:nestedScrollingEnabled="false"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </android.support.v7.widget.RecyclerView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/myclass_card_wechat02">

            <TextView
                android:id="@+id/network_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:layout_marginTop="25dp"
                android:text="添加安妮花小秘书微信号"
                android:textColor="#454545"
                android:textSize="13sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/network_teacher1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="加入安妮花网课咨询群，了解更多"
                android:textColor="#454545"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/network_teacher"
                app:layout_constraintTop_toBottomOf="@id/network_teacher" />

            <TextView
                android:id="@+id/network_teacher_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#454545"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/network_teacher1"
                app:layout_constraintTop_toBottomOf="@id/network_teacher1"

                />

            <TextView
                android:id="@+id/network_teacher_wx_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="(长按复制)"
                android:textColor="#454545"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/network_teacher_wx"
                app:layout_constraintTop_toBottomOf="@id/network_teacher1" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/net_imglist_bottom"
            android:layout_width="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/experience_imgList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>