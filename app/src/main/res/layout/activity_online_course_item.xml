<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/online_course_image"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:src="@drawable/lesson_grind_ear" />

    <TextView
        android:id="@+id/online_course_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/online_course_image"
        android:text="课程名称"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/online_course_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/online_course_text"
        android:layout_below="@+id/online_course_text"
        android:layout_marginTop="5dp"
        android:text="12/120"
        android:textColor="@color/text_black"
        android:textSize="14sp" />

</RelativeLayout>