<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_my_course_bg"
    android:padding="16dp">

    <ImageView
        android:id="@+id/my_course_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:src="@drawable/lesson_grind_ear" />

    <TextView
        android:id="@+id/my_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/my_course_image"
        android:text="安妮花磨耳朵A"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/my_course_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/my_course_title"
        android:layout_below="@+id/my_course_title"
        android:layout_marginTop="3dp"
        android:text="介绍"
        android:textColor="@color/text_color"
        android:textSize="14sp" />
</RelativeLayout>