<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:id="@+id/bind_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/icon_people"
        android:drawablePadding="15dp"
        android:text="李小红"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bind_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bind_student_name"
        android:layout_below="@+id/bind_student_name"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/icon_number2"
        android:drawablePadding="15dp"
        android:text="3268985623"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bind_student_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bind_student_number"
        android:layout_below="@+id/bind_student_number"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/icon_class"
        android:drawablePadding="15dp"
        android:text="磨耳朵1班 跟我读班2班"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/bind_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bind_student_class"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_bind" />
</RelativeLayout>