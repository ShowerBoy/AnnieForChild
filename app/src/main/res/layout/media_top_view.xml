<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC000000"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dip">

        <ImageButton
            android:id="@+id/mt_back"
            style="@android:style/MediaButton"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_screen" />

        <ImageButton
            android:id="@+id/mt_menu"
            style="@android:style/MediaButton"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_fullscreen" />

        <TextView
            android:id="@+id/mt_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/mt_menu"
            android:layout_centerVertical="true"
            android:text="标清"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/mt_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/mt_definition"
            android:layout_centerVertical="true"
            android:text="投屏"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="12dp"/>
    </RelativeLayout>

</LinearLayout>
