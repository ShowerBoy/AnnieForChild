<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/relativelayout_back"
    android:paddingBottom="12dp"
    android:paddingEnd="12dp"
    android:paddingStart="12dp">

    <ImageView
        android:id="@+id/help_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_explain" />

    <TextView
        android:id="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/help_icon"
        android:text="如何使用录音功能？"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/help_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/help_title"
        android:layout_below="@+id/help_title"
        android:layout_marginTop="8dp"
        android:text="请您确保手机录音功能已打开，按住麦克风图标，即可开始录音。"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

</RelativeLayout>