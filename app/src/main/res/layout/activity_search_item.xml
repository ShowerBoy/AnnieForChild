<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="77dp"
        android:layout_height="93dp"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/search_book_image"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/image_listen_erge" />

        <ImageView
            android:id="@+id/search_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_lock_book_f" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="asdfasfasd"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/search_book_name"
            android:layout_below="@+id/search_book_name"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grind_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/orange_stroke"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:paddingTop="3dp"
                android:text="磨耳朵"
                android:textColor="@color/text_orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reading_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/orange_stroke"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:paddingTop="3dp"
                android:text="流利读"
                android:textColor="@color/text_orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/speaking_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/orange_stroke"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:paddingTop="3dp"
                android:text="地道说"
                android:textColor="@color/text_orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/search_book_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_stroke"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:paddingTop="3dp"
                android:text=""
                android:textColor="@color/text_green2"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>