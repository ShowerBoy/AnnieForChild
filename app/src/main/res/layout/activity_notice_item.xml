<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/relativelayout_back">

    <TextView
        android:id="@+id/notice_type"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:background="@drawable/icon_back"
        android:layout_marginTop="15dp"
        android:text="系统"
        android:textSize="12sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/notice_type"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/notice_type"
        android:text="欢迎登陆安妮花"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/notice_title"
        android:text="2018-02-27 10:00"
        android:textColor="@color/text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/notice_type"
        android:layout_below="@+id/notice_title"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        android:text="家长你好，欢迎注册安妮花，有何质问可查看帮助或者联系客服，客服电话:400-888-9988!"
        android:maxLines="2"/>
</RelativeLayout>