<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“Hello,How are you?”"
                android:textColor="#ffff8c15"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/device_test_3_record_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/device_test_record"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|center"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/device_test_3_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="得分"
                    android:visibility="gone"
                    android:textColor="#ff999999"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/device_test_3_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff8c15"
                    android:visibility="gone"
                    android:text="0"
                    android:layout_marginLeft="12dp"
                    android:textSize="36sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击图标开始录音，再次点击图标结束录音"
                android:textColor="#ff333333"
                android:textSize="17sp"
                android:layout_marginTop="12dp"
                />
            <LinearLayout
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/orange_btn5"
                android:layout_marginTop="38dp"
                android:gravity="center_vertical"
               >
                <ImageView
                    android:id="@+id/device_test_3_play_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/device_play"
                    android:layout_marginLeft="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击播放我的录音"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>