<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/task_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-08-21   18:20-20:00"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_date"
        android:layout_marginTop="3dp"
        android:text="Phase1-AP1-108s"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/task_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_title"
        android:layout_marginTop="3dp"
        android:text="班级：S108"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/task_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/task_class"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/task_class"
        android:text="教师：Winter"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/do_task"
        android:layout_width="68dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_orange_btn2"
        android:gravity="center"
        android:text="做作业"
        android:textColor="@color/white"
        android:textSize="14sp" />
</RelativeLayout>