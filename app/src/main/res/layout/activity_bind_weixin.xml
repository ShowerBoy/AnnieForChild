<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bind_back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/back_white" />

    <EditText
        android:id="@+id/bind_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/bind_back_image"
        android:layout_alignEnd="@+id/bind_back_image"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:hint="请输入微信号"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:theme="@style/MyEditText" />

    <TextView
        android:id="@+id/bind_confirm_btn"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_above="@+id/bind_cancel_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/orange_backg2"
        android:gravity="center"
        android:text="绑定微信"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bind_cancel_btn"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/bind_back_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green_backg2"
        android:gravity="center"
        android:text="再想想"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
