<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/net_gift_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:src="@drawable/icon_net_gift_f" />

    <TextView
        android:id="@+id/net_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/net_gift_check"
        android:text=""
        android:textColor="@color/text_orange"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/net_gift_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/net_gift_name"
        android:layout_below="@+id/net_gift_name"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="12sp" />
</RelativeLayout>