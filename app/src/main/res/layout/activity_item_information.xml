<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/info_image"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:src="@drawable/test_image"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/info_image"
        android:text="安妮花，一切只为解决英语启蒙教育需求。"
        android:maxLines="2"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/info_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_image"
        android:layout_alignEnd="@+id/info_text"
        android:src="@drawable/collect_star_f" />

    <TextView
        android:id="@+id/info_read_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_collect"
        android:layout_toStartOf="@+id/info_collect"
        android:text="263次阅读"
        android:layout_marginRight="15dp"/>
</RelativeLayout>