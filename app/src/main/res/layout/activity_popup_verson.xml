<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

   >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@drawable/back_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="当前系统版本过低，使用过程中\n可能出现问题，请升级系统"
        android:textColor="@color/text_black"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/confirm_btn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textview_orange_back"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/text_orange"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/confirm_btn"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/textview_gray_back"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/clarity_gray"
        android:textSize="16sp" />
</android.support.constraint.ConstraintLayout>
