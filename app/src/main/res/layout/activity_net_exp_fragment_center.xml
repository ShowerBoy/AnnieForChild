<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/bottom_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/myclass_card_wechat02">

        <TextView
            android:id="@+id/network_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginTop="25dp"
            android:text="添加安妮花小秘书微信号"
            android:textColor="#454545"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/network_teacher1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="加入安妮花网课咨询群，了解更多"
            android:textColor="#454545"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/network_teacher"
            app:layout_constraintTop_toBottomOf="@id/network_teacher" />

        <TextView
            android:id="@+id/network_teacher_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#454545"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/network_teacher1"
            app:layout_constraintTop_toBottomOf="@id/network_teacher1"

            />

        <TextView
            android:id="@+id/network_teacher_wx_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="(长按复制)"
            android:textColor="#454545"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/network_teacher_wx"
            app:layout_constraintTop_toBottomOf="@id/network_teacher1" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>