    <com.annie.annieforchild.Utils.views.GradientScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/goto_buy"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/net_banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                >
            </com.daimajia.slider.library.SliderLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/net_suggest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="安妮花磨A"
                    android:textColor="#454545"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/net_suggest_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/net_suggest_title"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="14sp" />
                <RadioButton
                    android:id="@+id/net_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:button="@null"
                    android:text="分享"
                    android:textColor="#888888"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/online_icon_share" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/net_suggest_summary"
                    android:layout_marginTop="8dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/net_suggest_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=""
                        android:textColor="@color/text_orange"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/net_suggest_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orange_stroke"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:visibility="gone"
                        tools:text=""
                        android:textColor="@color/text_orange"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>



