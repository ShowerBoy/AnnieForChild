<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_tab_back"
        android:padding="10dp">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_arrow_left2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/text_black"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/refenerce_register"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_centerInParent="true"></TextView>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refenerce_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_btn_t"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/refenerce_register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="10dp"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/confirm_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="10dp"
            android:hint="请输入至少6位密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/yanzhengma_layout"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/register_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/test_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/icon_testcode"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:textColor="@color/text_black"
                android:textColorHint="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/get_test_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/text_green"
                android:textSize="15sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/yanzhengma_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/icon_phone"
            android:drawablePadding="10dp"
            android:hint="请输入手机号"
            android:inputType="phone|number"
            android:maxLength="11"
            android:textColor="@color/text_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即表示您同意我们的"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/text_green"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>