<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/net_item_img"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/net_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/net_item_img"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="16dp"
            android:textColor="#454545"
            android:textSize="14sp"
            android:text="磨耳朵"/>
        <TextView
            android:id="@+id/net_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/net_item_img"
            android:layout_below="@id/net_item_name"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="16dp"
            android:textColor="#888888"
            android:textSize="11sp"
            android:text="磨耳朵"/>
        <TextView
            android:id="@+id/net_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/net_item_img"
            android:layout_below="@id/net_item_summary"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="16dp"
            android:text="打卡分享，全部返还"
            android:textSize="11sp"
            android:textColor="#ffffff"
            android:background="#FF8A0D"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />
        <TextView
            android:id="@+id/net_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/net_item_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:textColor="#FF8A0D"
            android:text="9.9元"/>
        <ImageView
            android:id="@+id/net_hadbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_hadbuy" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>