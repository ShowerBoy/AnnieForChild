<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/address_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/address_edit">

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/address_name"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address_name"
            android:layout_below="@+id/address_name"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="3dp"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="16sp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_edit_address" />


</RelativeLayout>