<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical">
           <TextView
               android:id="@+id/type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="9dp"
               android:text=""
               android:textSize="16sp"
               android:textColor="#454545"/>

           <android.support.constraint.ConstraintLayout
                android:id="@+id/welcomeVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_my_course_bg"
                android:orientation="vertical"
                android:padding="18dp">

                <ImageView
                    android:id="@+id/video_img"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent" />

               <ImageView
                   android:layout_width="120dp"
                   android:layout_height="80dp"
                   android:src="@drawable/auditionclass_icon_play"
                   android:background="@color/colorTransparentBlack"
                   android:scaleType="center"
                   app:layout_constraintLeft_toLeftOf="@id/video_img"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text=""
                    app:layout_constraintLeft_toRightOf="@id/video_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/video_img"
                    android:layout_marginLeft="12dp"
                    android:maxLines="2"
                    android:layout_marginRight="10dp"
                    android:textColor="#454545"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="欢迎体验安妮花家庭英语"
                    android:textColor="#888888"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintLeft_toLeftOf="@id/title"/>

            </android.support.constraint.ConstraintLayout>


</LinearLayout>