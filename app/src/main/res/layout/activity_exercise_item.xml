<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/exercise_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="“I like cheese,”said Superhammy,The Yellow Cheese is on the “I like cheese,”said Superhammy."
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/exercise_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/exercise_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_preview_big" />

        <ImageView
            android:id="@+id/exercise_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/exercise_preview"
            android:src="@drawable/icon_speak_medium" />

        <ImageView
            android:id="@+id/exercise_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/exercise_speak"
            android:src="@drawable/icon_play_big_f" />

        <TextView
            android:id="@+id/exercise_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/text_red"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>