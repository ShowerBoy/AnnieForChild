<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clarity">

    <ImageView
        android:id="@+id/change_character_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_change_character_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/change_character_image"
        android:layout_alignTop="@+id/change_character_image"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="角色互换"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="12dp">

        <ImageView
            android:id="@+id/icon_change_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_change_character" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/character_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/icon_change_character"
            android:src="@drawable/icon_system_photo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/character_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="32dp"
            android:layout_toStartOf="@+id/icon_change_character"
            android:src="@drawable/photo" />
    </RelativeLayout>
</RelativeLayout>