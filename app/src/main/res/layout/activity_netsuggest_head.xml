<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/net_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"></com.daimajia.slider.library.SliderLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/net_suggest_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#454545"
                android:textSize="20sp"
                tools:text="" />

            <TextView
                android:id="@+id/net_suggest_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/net_suggest_title"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="#888888"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/net_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:button="@null"
                android:drawableTop="@drawable/online_icon_share"
                android:text="分享"
                android:textColor="#888888"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/net_suggest_summary"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/net_suggest_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_orange"
                    android:textSize="18sp"
                    tools:text="" />

                <TextView
                    android:id="@+id/net_suggest_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/orange_stroke"
                    android:paddingLeft="6dp"
                    android:paddingTop="1dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/text_orange"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            android:background="@color/light_gray2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="课程介绍"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
    </LinearLayout>






</RelativeLayout>