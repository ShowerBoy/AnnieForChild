<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_tab_back">

        <ImageView
            android:id="@+id/modify_psd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_left2" />

        <TextView
            android:id="@+id/modify_psd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="忘记密码"
            android:textColor="@color/text_black"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/refenerce_register2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_centerInParent="true"></TextView>

        <Button
            android:id="@+id/next_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refenerce_register2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_btn_t"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/confirm_password2"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/refenerce_register2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/modify_password"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/confirm_password2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:hint="请输入至少6位新密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/yanzhengma_layout2"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/modify_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/test_code2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="请输入验证码"
                android:textColor="@color/text_black"
                android:textColorHint="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/get_test_code2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/text_orange"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/phone_number2"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/yanzhengma_layout2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:hint="请输入手机号"
            android:inputType="phone|number"
            android:maxLength="11"
            android:textColor="@color/text_black"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>