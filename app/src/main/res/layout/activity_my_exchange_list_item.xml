<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="20dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/item_coin_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/coin" />

    <TextView
        android:id="@+id/item_exchange_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/item_coin_image"
        android:text="兑换"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_exchange_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_coin_image"
        android:layout_marginTop="10dp"
        android:text="2018-01-12 13:00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_exchange_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="+105"
        android:textColor="@color/text_black"
        android:textSize="18sp" />
</RelativeLayout>