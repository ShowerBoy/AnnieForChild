<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/special_preheat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_my_course_bg"
    android:orientation="vertical"
    android:padding="14dp">

    <ImageView
        android:id="@+id/special_preheat_video_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/special_preheat_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:maxLines="2"
        android:textColor="#454545"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/special_preheat_video_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/special_preheat_video_img"
        tools:text="" />

    <TextView
        android:id="@+id/special_preheat_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text=""
        android:textColor="#888888"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/special_preheat_title"
        app:layout_constraintTop_toBottomOf="@id/special_preheat_title" />

</android.support.constraint.ConstraintLayout>